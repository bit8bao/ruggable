{
  "restartable": "rs",
  "ignore": ["node_modules/**/node_modules"],
  "verbose": false,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": ["./data/", "./apis/", "./src/", "./server.js"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "ts,js,json"
}
